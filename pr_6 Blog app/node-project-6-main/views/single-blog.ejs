<%- include('header') %>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <img src="<%= blog.image %>" height="400" width="450" class="card-img-top" alt="Blog Image">
                <div class="card-body">
                    <h2 class="card-title"><%= blog.title %></h2>
                    <p class="text-muted">By: <%= blog.author %> | <%= blog.createdAt.toDateString() %></p>
                    <p class="text-muted"><strong>Category:</strong> <%= blog.category %> || <strong>Language:</strong> <%= blog.language %></p>
                            <p class="text-muted"><strong>Date:</strong> <%= new Date(blog.createdAt).toLocaleDateString() %></p>
                    <p class="card-text"><%= blog.content %></p>
                    <a href="/blog/view-all-blogs" class="btn btn-secondary">Back to Blogs</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>
