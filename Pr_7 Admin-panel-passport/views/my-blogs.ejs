<%- include('header') %>

<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-6 d-flex align-items-center">
        <h4 class="page-title">My Blogs</h4>
      </div>
      <div class="col-6 d-flex justify-content-end">
        <a href="/blog/view-all-blogs" class="btn btn-sm" style="background-color:#7460ee; color:#fff; border:none;">
          <i class="fas fa-list"></i> All Blogs
        </a>
      </div>
    </div>
  </div>

  <!-- ============================================================== -->
  <!-- Container -->
  <!-- ============================================================== -->
  <div class="container">
    <a href="/blog/add-blog" class="btn my-3" style="background-color:#7460ee; color:#fff; border:none;">
      <i class="fas fa-plus"></i> Add New Blog
    </a>

    <div class="row g-4">
      <% if (blogs && blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <!-- âœ… 3 cards per row -->
          <div class="col-lg-4 col-md-6 col-sm-12 my-4">
            <div class="card h-100 shadow-sm border-0 mx-4" style="transition: transform 0.2s;">
              <img 
                src="<%= blog.image && blog.image.trim() !== '' ? blog.image : '/uploads/default.jpg' %>"
                class="card-img-top"
                alt="<%= blog.title %>"
                style="height:200px; object-fit:cover; border-top-left-radius:10px; border-top-right-radius:10px;"
                onerror="this.src='/uploads/default.jpg'">
              
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2 text-truncate"><%= blog.title %></h5>
                <p class="text-muted small mb-1">Category: <%= blog.category || 'N/A' %></p>
                <p class="text-muted small mb-3">Date: <%= new Date(blog.createdAt).toLocaleDateString() %></p>

                <div class="mt-auto d-flex flex-column gap-2">
                  <a href="/blog/single-blog/<%= blog._id %>" class="btn btn-info btn-sm w-100">
                    <i class="fas fa-eye"></i> View
                  </a>
                  <a href="/blog/edit-blog/<%= blog._id %>" class="btn btn-warning btn-sm w-100">
  <i class="fas fa-edit"></i> Edit
</a>

                  <a href="/blog/delete-blog/<%= blog._id %>" class="btn btn-danger btn-sm w-100">
                    <i class="fas fa-trash"></i> Delete
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center mt-4">
          <p>No blogs found. Start writing one!</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('footer') %>
