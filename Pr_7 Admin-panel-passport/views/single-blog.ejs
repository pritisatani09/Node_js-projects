<%- include('header') %>

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Blog Details</h4>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- Container fluid -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <% if (blog) { %>
            <div class="card shadow-sm border-0" style="max-width: 800px; margin: 0 auto;">
                
                <% if (blog.image) { %>
                    <img src="<%= blog.image %>" 
                         class="card-img-top" 
                         alt="<%= blog.title %>" 
                         style="height: 350px; object-fit: cover; border-radius: 10px 10px 0 0;">
                <% } %>

                <div class="card-body">
                    <h3 class="card-title text-dark font-weight-bold"><%= blog.title %></h3>
                    <p class="text-muted mb-2">
                        <i class="fa fa-folder-open"></i> <%= blog.category %> &nbsp; | &nbsp;
                        <i class="fa fa-language"></i> <%= blog.language %>
                    </p>
                    <hr>
                    <p class="card-text" style="font-size: 15px; line-height: 1.7; text-align: justify;">
                        <%= blog.content %>
                    </p>
                </div>

                <div class="card-footer bg-white text-center">
                    <a href="/blog/view-all-blogs" class="btn btn-outline-primary btn-sm">
                        <i class="fa fa-arrow-left"></i> Back to Blogs
                    </a>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-warning text-center">
                Blog not found or deleted.
            </div>
        <% } %>
    </div>
</div>

<%- include('footer') %>
