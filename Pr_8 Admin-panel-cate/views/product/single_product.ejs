<%- include('../header') %>

    <div class="page-wrapper">
        <div class="container-fluid mt-5">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card shadow-lg border-0">
                        <div class="row no-gutters">

                            <!-- Product Image -->
                            <div class="col-md-5">
                                <img src="<%= product.productImage %>" alt="<%= product.title %>"
                                    class="img-fluid h-100 w-100"
                                    style="object-fit: cover; border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;">
                            </div>

                            <!-- Product Details -->
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h2 class="card-title font-weight-bold">
                                        <%= product.title %>
                                    </h2>

                                    <p class="text-muted">
                                        <%= product.desc %>
                                    </p>

                                    <hr>

                                    <strong>Category:</strong>
                                    <%= product.category ? product.category.categoryName : "N/A" %><br>

                                        <strong>Subcategory:</strong>
                                        <%= product.subcategory ? product.subcategory.subCategoryName : "N/A" %><br>

                                            <strong>Extra Category:</strong>
                                            <%= product.extracategory ? product.extracategory.extraCategory : "N/A" %>
                                                <br>

                                                <div class="mb-3">
                                                    <strong>Price:</strong>
                                                    <span class="text-success h5">₹ <%= product.price %></span><br>
                                                    <strong>Available Quantity:</strong>
                                                    <%= product.quantity %> units
                                                </div>

                                                <div class="mt-4">
                                                    <a href="/product/edit-product/<%= product._id %>"
                                                        class="btn btn-warning">Edit</a>


                                                    <!-- ✅ Correct delete link -->
                                                    <a href="/product/delete-product/<%= product._id %>"
                                                        class="btn btn-danger ml-2"
                                                        onclick="return confirm('Are you sure you want to delete this product?');">
                                                        Delete
                                                    </a>

                                                    <a href="/product/view-product" class="btn btn-secondary ml-2">Back
                                                        to List</a>
                                                </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>