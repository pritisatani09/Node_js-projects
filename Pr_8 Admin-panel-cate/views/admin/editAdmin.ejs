<%- include('../header') %>

<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Edit Admin</h4>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <form class="form-horizontal" action="/admin/update-admin/<%= admin._id %>" method="post" enctype="multipart/form-data">
            <div class="card-body">
              <h4 class="card-title">Edit Personal Info</h4>

              <div class="form-group row">
                <label class="col-sm-3 text-right control-label col-form-label">First Name</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" name="firstname" value="<%= admin.firstname %>">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 text-right control-label col-form-label">Last Name</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" name="lastname" value="<%= admin.lastname %>">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 text-right control-label col-form-label">Email</label>
                <div class="col-sm-9">
                  <input type="email" class="form-control" name="email" value="<%= admin.email %>">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 text-right control-label col-form-label">Password</label>
                <div class="col-sm-9">
                  <input type="password" class="form-control" name="password" placeholder="Enter new password if you want to change">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 text-right control-label col-form-label">Gender</label>
                <div class="col-md-9">
                  <input type="radio" name="gender" value="Male" <% if(admin.gender === 'Male') { %> checked <% } %>> Male
                  <input type="radio" name="gender" value="Female" <% if(admin.gender === 'Female') { %> checked <% } %>> Female
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 text-right control-label col-form-label">Hobbies</label>
                <div class="col-md-9">
                  <input type="checkbox" name=" hobbies" value="Music" <% if(admin.hobbies?.includes('Music')) { %> checked <% } %>> Music
                  <input type="checkbox" name=" hobbies" value="Adventure" <% if(admin.hobbies?.includes('Adventure')) { %> checked <% } %>> Adventure
                  <input type="checkbox" name="hobbies" value="Reading" <% if(admin.hobbies?.includes('Reading')) { %> checked <% } %>> Reading
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 text-right control-label col-form-label">Profile Image</label>
                <div class="col-md-9">
                  <input type="file" name="profileImage">
                  <% if(admin.profileImage) { %>
                    <img src="<%= admin.profileImage%>" width="100">
                  <% } %>
                </div>
              </div>
            </div>

            <div class="border-top">
              <div class="card-body">
                <button type="submit" class="btn btn-primary">Update Admin</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../footer') %>
